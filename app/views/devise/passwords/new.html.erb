<h1>Forgot your password?</h1>
<br/>
<%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }, :html => {:class => 'form-horizontal well' }) do |f| %>
  <%= f.error_notification %>
  <%= f.input :email, :required => true %>

  <div class="controls">
    <%= f.button :submit, "Send me reset password instructions", :class => 'btn btn-primary' %>
  </div>
<% end %>

<%= render "links" %>